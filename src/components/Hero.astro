<section class="relative min-h-screen bg-white overflow-hidden">
  <!-- Large geometric shape -->
  <div class="absolute right-0 top-0 w-96 h-screen bg-black rounded-tl-3xl transform rotate-12 origin-top-left translate-x-32 -translate-y-12"></div>
  
  <!-- Content -->
  <div class="container max-w-xs pl-6 pt-40 relative z-10">
    <h1 class="text-gray-900 text-base font-normal mt-12 mb-6">Where are you looking to buy?</h1>
    
    <div class="flex items-center">
      <input 
        type="text" 
        placeholder="Enter location" 
        class="border-0 border-b border-gray-300 bg-transparent text-sm py-2 focus:outline-none focus:border-gray-900 transition-colors flex-1 mr-2"
      >
      <button 
        class="text-gray-900 hover:text-gray-600 transition-colors"
        aria-label="Search"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </button>
    </div>
  </div>
</section>